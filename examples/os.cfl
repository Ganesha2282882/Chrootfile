#!/bin/bash

# Variables
APP_NAME="OS"
EXTRACTER="tar xpvf"

# Aliases
alias dl="wget -qc --show-progress"
mkcd()
{
mkdir $1
cd $1
}
alias copy="cp"
alias add="cp"
alias apply=$EXTRACTER
alias addex="chmod +x"

# Prep commands
mkcd root

# Building
mkdir bin
dl https://busybox.net/downloads/binaries/1.26.2-i686/busybox_ASH -O bin/sh
addex bin/sh
cat > init <<EOF
#!/bin/sh
/bin/sh
EOF
addex init

# Finish line
echo $APP_NAME is now built.
